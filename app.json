{
  "expo": {
    "name": "Mandala Day",
    "slug": "mandala-day",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/mandala-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b0817"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mandaladay.app",
      "infoPlist": {
        "UIBackgroundModes": ["audio", "fetch", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b0817"
      },
      "package": "com.mandaladay.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/mandala-icon.png",
      "bundler": "metro",
      "output": "single",
      "themeColor": "#0b0817",
      "backgroundColor": "#0b0817",
      "name": "Mandala Day",
      "shortName": "Mandala Day"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "sounds": ["./assets/audio/gong.mp3"]
        }
      ]
    ]
  }
}
